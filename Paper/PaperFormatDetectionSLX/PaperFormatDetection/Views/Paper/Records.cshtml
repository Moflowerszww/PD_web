@model IEnumerable<PaperFormatDetection.Models.Report>

@{
    ViewBag.Title = "Index";
}

<div class="container margin-top-30">
    <div class="row">
        <div class="panel panel-dsuccess">
            <div class="panel-heading">
                <h3 class="panel-title">检测记录</h3>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>论文名称</th>
                        <th>检测时间</th>
                        <th>错误数目</th>
                        <th>报告下载</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.PaperName)</td>
                            <td>@Html.DisplayFor(modelItem => item.DetectTime)</td>
                            <td>@Html.DisplayFor(modelItem => item.ErrorNum)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReportName)
                                <a href="/Paper/Download">
                                    <span class="glyphicon glyphicon-download-alt"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="panel-footer">
                <ul class="pagination" style="margin-top:5px;margin-bottom:5px;">
                    <li><a href="#">&laquo;</a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">&raquo;</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>