@{
    Layout = "~/Views/Shared/_Layout_Index.cshtml";
}
<div style="width:100%;height:100%; display:flex;justify-content:center;align-items:center;">
    <div class="login-area" style="background-color: #FFF;  margin-top:50px;">
        <div id="top">
            用户登录
        </div>
        <div class="inputarea"><div class="space"></div><input id="username" type="text" placeholder="用户名" /></div>
        <div class="inputarea"><div class="space1"></div><input id="password" type="password" placeholder="密码" /></div>
        <div id="autologo">
            <div id="login-error">忘记密码？</div>
            <div id="prompt">密码错误</div>
        </div>
        <div id="login">登 录</div>
        <div id="otherLogin">
            <span>第三方登录</span>
            <span id="qq_login"></span>
            <span id="weixin_login"></span>
            <span id="weibo_login"></span>
        </div>
        @*<div id="register">注 册</div>*@
    </div>
</div>

